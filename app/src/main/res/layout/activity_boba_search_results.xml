<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BobaSearchResultsActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="558dp" android:id="@+id/bobaSearchResults"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/search_query"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/search_result_list_item"/>
    <TextView
            android:text="BobaStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" app:fontFamily="@font/amiko"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Search results for:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" app:fontFamily="@font/amiko"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"/>
    <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_width="229dp"
            android:layout_height="37dp"
            android:id="@+id/search_query" android:textSize="24sp"
            app:fontFamily="@font/caveat" android:textColor="#E91E63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <TextView
            android:text="No results found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_results" android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/bobaSearchResults"
            app:layout_constraintEnd_toStartOf="@+id/bobaSearchResults" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="@+id/bobaSearchResults" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.029"
            app:layout_constraintHorizontal_bias="0.5"/>

</android.support.constraint.ConstraintLayout>