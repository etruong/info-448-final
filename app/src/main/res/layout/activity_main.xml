<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="View Closest Boba Stops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mapButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/decide_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.06"/>
    <TextView
            android:layout_width="241dp"
            android:layout_height="57dp"
            android:text="Boba Stop"
            android:gravity="center"
            app:fontFamily="@font/caveat" android:textSize="40sp"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#E91E63" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decide_button"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/name_input"
            android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/name_input"
            android:inputType="text"
            android:hint="Search for a Boba Stop"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="Start searching for your favorite boba place or see a listing of boba stops near you!"
            android:gravity="center"
            android:layout_width="347dp"
            android:layout_height="63dp"
            android:id="@+id/textView13"
            app:fontFamily="@font/amiko" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="121dp"
            android:layout_height="98dp" app:srcCompat="@drawable/boba_bubble_tea_png"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="Welcome to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp" app:fontFamily="@font/amiko"/>

</android.support.constraint.ConstraintLayout>