<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BobaOverview"
        android:id="@+id/boba_overview_id"
        android:background="#ffffff">

    <TextView
            android:text="Shop Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopName"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="112dp" android:layout_marginStart="112dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Decider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deciderBtn"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp"
            app:layout_constraintEnd_toStartOf="@+id/menuBtn" android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="249dp"
            app:layout_constraintTop_toBottomOf="@+id/shopPhone"/>
    <Button
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareBtn"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toEndOf="@+id/menuBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp" android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="249dp"
            app:layout_constraintTop_toBottomOf="@+id/shopPhone"/>
    <Button
            android:text="View Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menuBtn"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toEndOf="@+id/deciderBtn"
            app:layout_constraintEnd_toStartOf="@+id/shareBtn" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="99dp" android:layout_marginTop="249dp"
            app:layout_constraintTop_toBottomOf="@+id/shopPhone"/>
    <TextView
            android:text="Shop Address"
            android:layout_width="271dp"
            android:layout_height="58dp"
            android:id="@+id/shopAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="70dp" android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" android:layout_marginRight="70dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/shopName"/>
    <TextView
            android:text="Phone"
            android:layout_width="274dp"
            android:layout_height="58dp"
            android:id="@+id/shopPhone"
            android:autoLink="phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp" android:layout_marginRight="68dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/shopAddress"/>
</android.support.constraint.ConstraintLayout>