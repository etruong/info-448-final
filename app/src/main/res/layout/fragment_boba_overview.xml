<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BobaOverview"
        android:id="@+id/boba_overview_id"
        android:background="#ffffff">

    <TextView
            android:text="Shop Name"
            android:gravity="center"
            android:layout_width="344dp"
            android:layout_height="56dp"
            android:id="@+id/shopName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="232dp"
            app:fontFamily="@font/caveat" android:textColor="#E91E63"/>
    <Button
            android:text="Share"
            android:stateListAnimator="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/shareBtn" app:layout_constraintHorizontal_bias="0.792"
            app:layout_constraintStart_toEndOf="@+id/menuBtn"
            app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn" style="@style/Widget.AppCompat.Button.Colored"/>
    <Button
            android:text="Decider"
            android:stateListAnimator="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deciderBtn"
            app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn"
            app:layout_constraintEnd_toStartOf="@+id/menuBtn" style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="View Menu"
            android:stateListAnimator="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/menuBtn"
            app:layout_constraintStart_toEndOf="@+id/deciderBtn" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="99dp" style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/boba_food"/>
    <TextView
            android:text="Address: "
            android:layout_width="272dp"
            android:layout_height="37dp"
            android:id="@+id/shopAddress" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/shopName"
            app:fontFamily="@font/amiko" app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
            android:text="BobaStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/shopName" app:layout_constraintVertical_bias="0.384"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/caveat"/>
    <TextView
            android:layout_width="272dp"
            android:layout_height="22dp"
            android:id="@+id/boba_food"
            app:layout_constraintTop_toBottomOf="@+id/boba_rating"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/amiko" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Rating:"
            android:layout_width="272dp"
            android:layout_height="22dp"
            android:id="@+id/boba_rating"
            app:layout_constraintTop_toBottomOf="@+id/boba_phone"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/amiko" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Phone:"
            android:layout_width="272dp"
            android:layout_height="37dp"
            android:id="@+id/boba_phone"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/amiko"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/shopAddress"/>
    <ImageView
            android:src="@drawable/ic_local_cafe_pink"
            android:layout_width="95dp"
            android:layout_height="89dp"
            android:id="@+id/imageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/shopName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>