<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BobaOverview"
        android:id="@+id/boba_overview_id"
        android:background="#ffffff">

    <TextView
            android:text="Shop Name"
            android:gravity="center"
            android:layout_width="344dp"
            android:layout_height="56dp"
            android:id="@+id/shopName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40sp"
            app:fontFamily="@font/caveat" android:textColor="#E91E63"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="24dp"/>
    <Button
            android:text="Share"
            android:stateListAnimator="@null"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/shareBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/deciderBtn"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Decider"
            android:stateListAnimator="@null"
            android:layout_width="350dp"
            android:id="@+id/deciderBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/menuBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="View Menu"
            android:stateListAnimator="@null"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/menuBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/boba_food" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.04"/>
    <TextView
            android:text="Address: "
            android:layout_width="272dp"
            android:layout_height="37dp"
            android:id="@+id/shopAddress" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/amiko" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="8dp"/>
    <TextView
            android:text="BobaStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/caveat" android:layout_marginTop="40dp"/>
    <TextView
            android:layout_width="272dp"
            android:layout_height="22dp"
            android:id="@+id/boba_food"
            app:layout_constraintTop_toBottomOf="@+id/boba_rating"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" app:fontFamily="@font/amiko" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Rating:"
            android:layout_width="272dp"
            android:layout_height="22dp"
            android:id="@+id/boba_rating"
            app:fontFamily="@font/amiko" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/boba_phone" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.51" app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:src="@drawable/ic_local_cafe_pink"
            android:layout_width="95dp"
            android:layout_height="89dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/shopName"
    />

    <TextView
            android:text="Phone"
            android:layout_width="276dp"
            android:layout_height="37dp"
            android:id="@+id/boba_phone"
            android:autoLink="phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp" android:layout_marginRight="68dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/shopAddress" app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>