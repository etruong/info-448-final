<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BobaOverview"
        android:id="@+id/boba_overview_id"
        android:background="#ffffff">

    <TextView
            android:text="Shop Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <Button
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/shareBtn" app:layout_constraintHorizontal_bias="0.792"
            app:layout_constraintStart_toEndOf="@+id/menuBtn"
            app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn"/>
    <Button
            android:text="Decider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deciderBtn"
            app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn"
            app:layout_constraintEnd_toStartOf="@+id/menuBtn"/>
    <Button
            android:text="View Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/menuBtn"
            app:layout_constraintStart_toEndOf="@+id/deciderBtn" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="99dp"/>
    <TextView
            android:text="Shop Address"
            android:layout_width="266dp"
            android:layout_height="198dp"
            android:id="@+id/shopAddress" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="173dp"/>
</android.support.constraint.ConstraintLayout>