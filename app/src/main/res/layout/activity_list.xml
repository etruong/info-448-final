<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteX="176dp" android:id="@+id/recyclerView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mapButton"
                android:enabled="false"/>
        <Button
                android:text="List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/listButton"
                android:enabled="true"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>